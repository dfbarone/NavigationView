<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppCompatButtonStyle">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableTint">@color/disable_grey</item>
        <item name="android:textColor">@color/disable_grey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NavigationViewStyle">
        <item name="android:elevation">4dp</item>
        <item name="android:translationZ">4dp</item>
        <item name="compactModeWidth">?attr/actionBarSize</item>
        <item name="android:background">?android:attr/windowBackground</item>
    </style>

</resources>
